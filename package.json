{
  "name": "mlannotator",
  "private": true,
  "version": "0.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",

    "build:cv:debug": "node scripts/buildCV.js debug",
    "build:cv:release": "node scripts/buildCV.js release",

    "electron:build": "npm run build && tsc --project tsconfig.electron.json",
    "electron:start": "npm run electron:build && npm run build:cv:debug && electron dist/electron/main.js",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:dev:backend\"",
    "electron:dev:backend": "npm run build:cv:debug && tsc --project tsconfig.electron.json && wait-on http://localhost:5173 && cross-env NODE_ENV=development electron dist/electron/main.js",
    "electron:dist": "npm run electron:build && npm run build:cv:release && electron-builder",

    "clean": "rimraf dist build"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.cf.mlannotator",
    "files": [
      "dist/**/*",
      "dist/electron/main.js"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
